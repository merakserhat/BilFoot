<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bilmatch.bilfoot">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:logo="@drawable/bilfoot_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BilFoot">
        <activity
            android:name=".view.announcements.PlayerAnnnouncementPositionSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".view.announcements.NewAnnouncementActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".view.announcements.ListAnnouncementsActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".view.ProfileScreenActivity"
            android:exported="false" />
        <activity
            android:name=".view.registration.PositionSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".view.registration.RegistrationUserDefiningsActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".view.AuthenticationActivity"
            android:exported="false"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>