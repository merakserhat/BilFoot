<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.AuthenticationActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.02"
            app:srcCompat="@drawable/logo" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="BilFoot"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/registerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="16dp">

                    <TextView
                        android:id="@+id/textView3register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/poppins"
                        android:text="Register"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView4register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="E-mail"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:textAlignment="viewStart" />

                    <EditText
                        android:id="@+id/registerEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/card"
                        android:fontFamily="@font/poppins"
                        android:inputType="textEmailAddress"
                        android:minHeight="40dp"
                        android:paddingHorizontal="20dp"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:background="@drawable/rounded_edittext"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:textColorHint="#9F9D9D" />

                    <TextView
                        android:id="@+id/usernameTextRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Username"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:textAlignment="viewStart" />

                    <EditText
                        android:id="@+id/registerUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/card"
                        android:fontFamily="@font/poppins"
                        android:inputType="textPersonName"
                        android:minHeight="40dp"
                        android:paddingHorizontal="20dp"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:background="@drawable/rounded_edittext"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:textColorHint="#9F9D9D" />

                    <TextView
                        android:id="@+id/textView5Register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Password"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:textAlignment="viewStart" />
                    <!--

-->

                    <EditText
                        android:id="@+id/registerPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/card"
                        android:fontFamily="@font/poppins"
                        android:inputType="textPassword"
                        android:minHeight="40dp"
                        android:paddingHorizontal="20dp"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:background="@drawable/rounded_edittext"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:textColorHint="#9F9D9D" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:layout_centerInParent="true">

                            <Button
                                android:id="@+id/registerButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:paddingHorizontal="60dp"
                                android:text="Register" />

                            <TextView
                                android:id="@+id/txtRegisterError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:fontFamily="@font/poppins"
                                android:onClick="onRegisterInsteadClicked"
                                android:text="This e-mail already in use"
                                android:textAlignment="center"
                                android:textColor="@color/design_default_color_error"
                                android:textSize="14sp"
                                android:visibility="gone"
                                tools:layout_centerInParent="true"
                                tools:textAlignment="center" />

                            <TextView
                                android:id="@+id/loginInstead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="8dp"
                                android:clickable="true"
                                android:fontFamily="@font/poppins"
                                android:onClick="onLoginInsteadClicked"
                                android:text="Already have an account?\nLogin"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                tools:layout_centerInParent="true"
                                tools:textAlignment="center" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
                <!-- Login Kısmı Başlangıcı -->
                <LinearLayout
                    android:id="@+id/loginView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="16dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/poppins"
                        android:text="Login"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="E-mail"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:textAlignment="viewStart" />

                    <EditText
                        android:id="@+id/loginEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/card"
                        android:fontFamily="@font/poppins"
                        android:inputType="textEmailAddress"
                        android:minHeight="40dp"
                        android:paddingHorizontal="20dp"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:background="@drawable/rounded_edittext"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:textColorHint="#9F9D9D" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/poppins"
                        android:text="Password"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:textAlignment="viewStart" />

                    <EditText
                        android:id="@+id/loginPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/card"
                        android:fontFamily="@font/poppins"
                        android:inputType="textPassword"
                        android:minHeight="40dp"
                        android:paddingHorizontal="20dp"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:background="@drawable/rounded_edittext"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:textColorHint="#9F9D9D" />

                    <CheckBox
                        android:id="@+id/rememberMe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remember me"
                        android:textColor="@color/white" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:layout_centerInParent="true">

                            <Button
                                android:id="@+id/loginButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:paddingHorizontal="60dp"
                                android:text="Login" />

                            <TextView
                                android:id="@+id/txtLoginError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:fontFamily="@font/poppins"
                                android:onClick="onRegisterInsteadClicked"
                                android:text="User could not found"
                                android:textAlignment="center"
                                android:textColor="@color/design_default_color_error"
                                android:textSize="14sp"
                                android:visibility="gone"
                                tools:layout_centerInParent="true"
                                tools:textAlignment="center" />

                            <TextView
                                android:id="@+id/registerInstead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="8dp"
                                android:clickable="true"
                                android:fontFamily="@font/poppins"
                                android:onClick="onRegisterInsteadClicked"
                                android:text="Don't have an account?\nRegister"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                tools:layout_centerInParent="true"
                                tools:textAlignment="center" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>